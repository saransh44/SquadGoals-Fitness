<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="guptagaming.com.demoday.SignUp"
    android:background="@mipmap/backgroundofsignup"
    android:id="@+id/SignUpScreen">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/Confirmation"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Account Set Up"
        android:id="@+id/textView"
        android:height="50dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColorHint="@android:color/holo_orange_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:hint="Enter Username"
        android:editable="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:textColorHint="@android:color/holo_orange_dark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Enter Password"
        android:textColorHint="@android:color/holo_orange_dark"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:textColorHint="@android:color/holo_orange_dark"
        android:hint="Enter Email"
        android:layout_below="@+id/Re"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Re"
        android:hint="Re-Enter Password"
        android:textColorHint="@android:color/holo_orange_dark"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/birth"
        android:hint="Enter Birth Year"
        android:textColorHint="@android:color/holo_orange_dark"
        android:layout_below="@+id/Gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gender"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/Male"
            android:checked="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"/>
        //android:onClick="selectGender"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/Female"
            android:checked="false"
            android:layout_below="@+id/Male"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        //android:onClick="selectGender"
    </RadioGroup>

    <!--<EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WorkOutType"
        android:layout_below="@+id/birth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@android:color/holo_orange_dark"
        android:layout_alignRight="@+id/birth"
        android:layout_alignEnd="@+id/birth"
        android:hint="Work Out Type" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Freq"
        android:textColorHint="@android:color/holo_orange_dark"
        android:hint="# Number of Work Outs Per Week"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" /> -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Work Out Type: Running"
        android:id="@+id/textView4"
        android:layout_below="@+id/birth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/birth"
        android:layout_alignEnd="@+id/birth"
        android:textColor="@android:color/holo_orange_dark" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Fre"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="# Number of Work Outs Per Week:"
        android:id="@+id/textView5"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/Distance"
        android:hint="Enter Distance You Would Like To Run Each Day"
        android:textColorHint="@android:color/holo_orange_dark"
        android:layout_below="@+id/Fre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
